<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <% if (image) { %>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="preload" href="/profile-pic" as="image">
  <% } %>

  <link rel="stylesheet" href="/base.css">
  <link rel="stylesheet" href="/sidebar.css">
  <link rel="stylesheet" href="/dark-theme.css">
  <link rel="stylesheet" href="/markdown.css">
  <link rel="stylesheet" href="/mobile.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Literata:ital,opsz,wght@0,7..72,400;0,7..72,700;1,7..72,400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/fontawesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/solid.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/regular.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/brands.min.css">
  <link rel="stylesheet" id="highlightjs-light" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github.min.css" disabled>
  <link rel="stylesheet" id="highlightjs-dark" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github-dark.min.css">
</head>
<body class="dark-theme<%= typeof singleFile !== 'undefined' && singleFile ? ' single-file-mode' : '' %>">
  <div class="container">
    <% if (typeof singleFile !== 'undefined' && singleFile) { %>
    <button class="theme-toggle single-file-theme-toggle" id="themeToggleIcon" title="Toggle Theme" aria-label="Toggle between light and dark theme">
      <i class="fa-solid fa-circle-half-stroke"></i>
    </button>
    <% } %>
    <% if (typeof singleFile === 'undefined' || !singleFile) { %>
    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>
    <nav class="sidebar" role="navigation" aria-label="Site navigation">
      <div class="sidebar-toggle-zone" id="sidebarToggleZone" role="button" aria-label="Open sidebar"></div>
      <div class="sidebar-content">
        <div class="image-container">
          <% if (image) { %>
            <img src="/profile-pic" alt="Profile Image">
          <% } %>
        </div>
        <div class="sidebar-header">
          <p class="site-name">~ <%= title %></p>
        </div>
        <div class="navigation-buttons">
          <%- folderStructure %>
        </div>
        <button class="arrow-btn" id="collapseSidebar" aria-label="Toggle sidebar">‚ü®</button>
        <button class="theme-toggle" id="themeToggleIcon" title="Toggle Theme" aria-label="Toggle between light and dark theme">
          <i class="fa-solid fa-circle-half-stroke"></i>
        </button>
      </div>
    </nav>
    <% } %>
    <main class="main" role="main">
      <div id="file-content" class="markdown-body">
        <%- initialContent %>
        <% if (typeof relativePath !== 'undefined' && (typeof showDownload === 'undefined' || showDownload)) { %>
          <a href="/download/<%= relativePath %>" class="download-icon" title="Download">
            <i class="fa-solid fa-download"></i>
          </a>
        <% } %>
      </div>
      <% const hasFooterLinks = (socialLinks && socialLinks.length > 0) || sourceLink || (typeof showRss === 'undefined' || showRss); %>
      <% if (hasFooterLinks) { %>
      <div class="social-links-bar">
        <% if (socialLinks && socialLinks.length > 0) { %>
          <% socialLinks.forEach(function(link) { %><a href="<%= link.href %>" class="social-link" aria-label="<%= link.fab.replace('fa-', '') %>"><i class="fab <%= link.fab %>"></i></a><% }); %>
        <% } %>
        <% if (sourceLink) { %>
        <a href="<%= sourceLink %>" class="social-link" title="Source Code" aria-label="Source Code"><i class="fa-solid fa-code"></i></a>
        <% } %>
        <% if (typeof showRss === 'undefined' || showRss) { %>
        <a href="#" class="social-link rss-copy-link" title="Copy RSS Feed Link" aria-label="Copy RSS Feed Link" data-rss-url="/rss.xml"><i class="fa-solid fa-rss"></i></a>
        <% } %>
      </div>
      <% } %>
    </main>
  </div>

  <script src="/main.js"></script>
  <script src="/sidebar.js"></script>
  <script src="/content.js"></script>
</body>
</html>
